{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist/back-body-blast",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2021",
    "sourceMap": true,
    "lib": [
      "es2021"
    ],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "paths": {
      "@monorepo/*": [
        "packages/*/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "back-body-blast"
    }
  ],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}